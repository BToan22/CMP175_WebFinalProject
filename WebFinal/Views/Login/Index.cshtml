			<form action = "/Login/Register" method = "post">
		<div class="modal-dialog modal-lg ">
			<div class="modal-content">
				
				<section class="vh-100 bg-image"
					style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
					<div class="mask d-flex align-items-center h-100 gradient-custom-3">
						<div class="container h-100">
							<div class="row d-flex justify-content-center align-items-center h-100">
								<div class="col-12 col-md-9 col-lg-7 col-xl-6 ">
									<div class="card" style="border-radius: 15px">
										<div class="card-body ">
											<h2 class="text-uppercase text-center mb-2">Create an account</h2>
											<div class="form-group mb-1 ">
												<label class="form-label" for="txtFullname">Your Name</label>
												<input type="text" id="txtFullname"
													class="form-control form-control-lg"  name="txtFullname" required/>
											</div>

											<div class="form-group mb-1 ">
												<label class="form-label" for="txtUsername1">Your User Name</label>
												<input type="text" id="txtUsername1"
													class="form-control form-control-lg" name="txtUsername1" required/>

											</div>

											<div class="form-group  mb-1 ">
												<label class="form-label" for="txtPassword1">Password</label>
												<input type="password" id="txtPassword1"
													class="form-control form-control-lg" name="txtPassword1" required/>

											</div>

											

											<div class="form-group mb-1 ">
												<label for="selCity" class="form-label">City</label>
												<select class="form-select" name="selCity" id="selCity" required>
													<option selected disabled value="">Choose...</option>
													@foreach (var p in Model)
													{
														<option value="@p.Id">@p.Province1</option>
													}


												</select>
												<div class="invalid-feedback">
													Please select a valid City.
												</div>
											</div>

											<div class="form-check d-flex justify-content-center mb-1">
												<input class="form-check-input me-2" type="checkbox" value=""
													id="invalidCheck" required/>
												<label class="form-check-label" for="invalidCheck">
													I agree all statements in <a href="#!" class="text-body"><u>Terms of
															service</u></a>
												</label>
												
											</div>

											<div class="d-flex justify-content-center">
												<button type="submit"
													class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" ">
													Register
												</button>
											</div>

											

											<p class="text-center text-muted mt-2 mb-0">
												Have already an account? <a href="/Home" class="fw-bold text-body"><u>Login
														here</u></a>
											</p>



										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
